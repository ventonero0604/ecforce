{{ 'shop/contacts' | javascript_include_tag }}

<main class="l-container" role="main">
  <div class="l-container__row u-margin__top--60 u-margin__bottom--100">
    <header class="p-page_header">
      <div class="p-page_header__inner">
        <h1 class="p-page_header__inner__title u-text--head u-text--head">{{ 'contact.general.title.value' | t }}</h1>
        <p class="p-page_header__inner__lead u-text--body">
          {{ 'contact.general.lead_text.value' | t }}
          <a class="u-text--link" href="mailto:{{ base_info.contact_email }}">{{ base_info.contact_email }}</a>
        </p>
        <a class="p-page_header__inner__btn u-text--btn u-color__btn--bg" href="/shop">{{ 'general.action.return_top.value' | t }}</a>
      </div>
    </header>
  </div>
</main>
