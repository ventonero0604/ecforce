{{ 'shop/info' | javascript_include_tag }}

<main class="l-container" role="main">
  <div class="l-container__row u-margin__top--60">
    <header class="p-page_header">
      <div class="p-page_header__inner">
        <!-- プライバシーポリシー -->
        <h1 class="p-page_header__inner__title u-text--head">{{ 'base_info.privacy.privacy_policy.value' | t }}</h1>
      </div>
    </header>
  </div>
  <div class="l-container__row u-margin__top--60 u-margin__bottom--100">
    <section class="p-page_content">
      <div class="p-page_content__inner">
        <!-- プライバシーポリシーについて -->
        <h2 class="u-text--subhead">{{ 'base_info.privacy.title.value' | t }}</h2>
        <p class="u-text--body">{{ base_info.company_name }}{{ 'base_info.privacy.text.value' | t }}</p>
        <ul>
          <!-- プライバシーポリシー一覧 -->
          {% for privacy in privacies %}
            <li>
            <h2 class="u-text--subhead">{{ privacy.title }}</h2>
            <pre class="u-text--body">
              {{ privacy.text }}
            </pre>
            </li>
          {% endfor %}
        </ul>
      </div>
    </section>
  </div>
</main>

{% content_for meta_description %}
{% endcontent_for %}

{% content_for meta_keywords %}
{% endcontent_for %}

{% content_for title %}
{% endcontent_for %}
