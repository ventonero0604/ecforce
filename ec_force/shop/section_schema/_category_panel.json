{
  "id": "category_panel",
  "type": "category_panel-section",
  "name": {
    "ja": "商品カテゴリー"
  },
  "settings": [
    {
      "type": "selector",
      "id": "style",
      "label": {
        "ja": "カテゴリーのスタイル"
      },
      "options" : [
        {
          "value": "flex",
          "label": {
            "ja": "余白なし"
          }
        },
        {
          "value": "grid",
          "label": {
            "ja": "均等揃え"
          }
        }
      ]
    },
    {
      "type": "text",
      "id": "head",
      "label": {
        "ja": "見出し"
