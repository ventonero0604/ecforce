{
  "id": "image_slider",
  "type": "image_slider-section",
  "name": {
    "ja": "画像スライダー"
  },
  "settings": [
    {
      "type": "header",
      "id": "slideshow_contents_header",
      "label": {
        "ja": "コンテンツ"
      }
    },
    {
      "type": "image_content",
      "id": "slideshow_image_sliders",
      "label": {
        "ja": "画像スライド"
      },
      "image_block": {
        "type": "image_block",
        "min_blocks": 1,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": {
              "ja": "画像"
            }
          },
          {
            "type": "text",
            "id": "slide_link",
            "label": {
              "ja": "リンク"
            }
          }
        ]
      },
      "default": [
        {
          "image": "p-carousel_slider-1.png",
          "slide_link": ""
        },
        {
          "image": "p-carousel_slider-2.png",
          "slide_link": ""
        },
        {
          "image": "p-carousel_slider-3.png",
          "slide_link": ""
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "slideshow_switch",
      "label": {
        "ja": "スライドの自動切り替え"
      }
    },
    {
      "type": "range",
      "id": "slideshow_switching_interval",
      "label": {
        "ja": "切替え間隔"
      },
      "min": 3,
      "max": 9,
      "step": 1,
      "unit": {
        "ja": "秒"
      }
    }
  ]
}

